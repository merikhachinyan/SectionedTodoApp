<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodoItemActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/back">
    </ImageView>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:text="Save">
    </Button>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </EditText>
            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:lines="3"
                android:hint="Description"
                app:layout_constraintTop_toBottomOf="@id/editTextTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </EditText>
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:text="09/06/18"
                app:layout_constraintTop_toBottomOf="@id/editTextDescription"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </TextView>
            <CheckBox
                android:id="@+id/checkReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Reminder"
                app:layout_constraintTop_toBottomOf="@id/textViewDate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </CheckBox>
            <CheckBox
                android:id="@+id/checkRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Repeat"
                app:layout_constraintTop_toBottomOf="@id/checkReminder"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </CheckBox>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:visibility="gone"
                app:layout_goneMarginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/checkRepeat"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <RadioButton
                    android:id="@+id/radioDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radioWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radioMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly">
                </RadioButton>
            </RadioGroup>
            <ImageView
                android:id="@+id/textUpPriority"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="25dp"
                android:adjustViewBounds="false"
                android:src="@android:drawable/arrow_up_float"
                app:layout_constraintTop_toBottomOf="@id/radioGroup"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </ImageView>
            <TextView
                android:id="@+id/textPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Priority"
                app:layout_constraintTop_toBottomOf="@id/textUpPriority"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </TextView>
            <TextView
                android:id="@+id/textPriorityNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/textUpPriority"
                app:layout_constraintStart_toEndOf="@id/textPriority"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </TextView>
            <ImageView
                android:id="@+id/textDownPriority"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:adjustViewBounds="false"
                android:src="@android:drawable/arrow_down_float"
                app:layout_constraintTop_toBottomOf="@id/textPriorityNumber"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </ImageView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>